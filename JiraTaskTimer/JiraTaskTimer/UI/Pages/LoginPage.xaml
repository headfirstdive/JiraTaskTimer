<Page x:Class="JiraTaskTimer.UI.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JiraTaskTimer.UI"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="LoginPage">

    <Grid>
        <Grid>
            <Button x:Name="LoginButton" Content="Submit" Margin="176,216,176,0" VerticalAlignment="Top" Click="LoginButton_Click"/>
            <Grid Margin="10,10,346,10">
                <Label x:Name="username" Content="username" Margin="82,109,10,0" VerticalAlignment="Top"/>
                <Label x:Name="password" Content="password" Margin="82,140,10,0" VerticalAlignment="Top"/>
                <Label x:Name="username_Copy" Content="jira url" Margin="82,61,10,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Margin="176,10,10,10">
                <TextBox x:Name="usernameField" Height="23" Margin="10,109,87,0" TextWrapping="Wrap" VerticalAlignment="Top" />
                <PasswordBox x:Name="passwordField" Margin="10,137,87,0" VerticalAlignment="Top"/>
                <TextBox x:Name="serverField" Height="23" Margin="10,61,87,0" TextWrapping="Wrap" VerticalAlignment="Top" />
            </Grid>
        </Grid>
    </Grid>
</Page>
