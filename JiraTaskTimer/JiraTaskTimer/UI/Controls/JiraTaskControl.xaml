             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JiraTaskTimer.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="517">
